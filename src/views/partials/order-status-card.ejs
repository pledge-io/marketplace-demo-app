<article class="rounded-xl border border-gray-200 bg-white mb-4">
  <div class="flex items-start p-6">
    <a href="#" class="block shrink-0">
      <img
        alt="Image project <%= order.portfolio.name %>"
        class="h-14 w-14 rounded-lg object-cover"
        src="https://images.unsplash.com/photo-1570295999919-56ceb5ecca61?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NHx8YXZhdGFyfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=800&q=60"
      />
    </a>

    <div class="ml-4">
      <h3 class="font-medium sm:text-lg"><%= order.portfolio.name %></h3>
      <p class="text-sm text-gray-700"><%= order.id %></p>
      <p class="mt-3">
        <%- include('../partials/order-status-tag', { status: order.status }) %>
      </p>
      <% if (order.status === 'PAID' || order.status === 'COMPLETED') { %>
      <p class="mt-3">
        <a
          class="underline"
          target="_blank"
          href="<%= order.links.certificate.href %>"
          >View proof of offset</a
        >
      </p>
      <% } %>
    </div>
  </div>
</article>
