{
  "name": "marketplace",
  "version": "0.0.1",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.1.3",
    "chalk": "^3.0.0",
    "cookie-parser": "^1.4.6",
    "debug": "~2.6.9",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.8",
    "express": "~4.16.1",
    "morgan": "~1.9.1",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.27.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.4",
    "eslint-plugin-n": "^15.5.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.2.2",
    "postcss": "^8.4.18",
    "postcss-cli": "^10.0.0",
    "tailwindcss": "^3.2.2"
  },
  "scripts": {
    "start": "NODE_ENV=production npm-run-all build server",
    "build": "npm-run-all clean transpile tailwind:css",
    "server": "node ./.dist/server",
    "transpile": "babel ./src --out-dir .dist --copy-files",
    "tailwind:css": "postcss ./src/public/styles/styles.css -o ./.dist/public/styles/styles.css",
    "tailwind:css:watch": "npm run tailwind:css -- --watch",
    "clean": "rimraf .dist",
    "dev": "NODE_ENV=development npm-run-all build --parallel tailwind:css:watch server",
    "dev:watch": "nodemon",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "test": "jest"
  }
}
