{
  "name": "pledge-io-marketplace-demo",
  "version": "0.0.1",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.8",
    "aws-serverless-express": "^3.4.0",
    "axios": "^1.1.3",
    "chalk": "^3.0.0",
    "cookie-parser": "^1.4.6",
    "debug": "~2.6.9",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.8",
    "express": "~4.16.1",
    "lodash": "^4.17.21",
    "morgan": "~1.9.1",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.27.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.4",
    "eslint-plugin-n": "^15.5.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.2.2",
    "postcss": "^8.4.18",
    "postcss-cli": "^10.0.0",
    "serverless": "^3.24.1",
    "serverless-dotenv-plugin": "^4.0.2",
    "tailwindcss": "^3.2.2"
  },
  "scripts": {
    "start": "NODE_ENV=production npm-run-all build server",
    "build": "npm-run-all clean transpile tailwind:css",
    "server": "nodemon ./.dist/server",
    "deploy:lambda": "serverless deploy",
    "transpile": "babel ./src --out-dir .dist --extensions '.js,.css' --copy-files --no-copy-ignored",
    "transpile:watch": "npm run transpile -- --watch",
    "tailwind:css": "postcss ./src/public/styles/styles.css -o ./.dist/public/styles/styles.css",
    "tailwind:css:watch": "npm run tailwind:css -- --watch",
    "dev": "NODE_ENV=development npm-run-all build --parallel transpile:watch tailwind:css:watch server",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "test": "jest",
    "clean": "rimraf .dist"
  }
}
